<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Aquamarine">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.3"
        >

        <TextView
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"

            android:textColor="@color/DarkBlue"
            android:text="Suntil"
            android:textStyle="italic"
            android:textSize="40sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.4"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/courteney"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4"
            android:textColor="@color/DarkBlue"
            android:text="Create reminders for the"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView5"
            android:textColor="@color/DarkBlue"
            android:text="things you care about"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="0.3"
        >

        <Button
            android:id="@+id/button_cretae_samples"
            android:text="Create Sample Events"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="240dp"
            android:layout_height="40dp"

            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            android:onClick="createSamplesActive"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/button_no_thanks"
            android:text="No thanks"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="240dp"
            android:layout_height="40dp"


            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="createSamplesInactive" />
    </LinearLayout>

</LinearLayout>